<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/repairs_private_apply_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/complain_back"
        style="@style/Back_Button" />

        <TextView
            android:id="@+id/complain_apply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="物业反馈"
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_22" />

        <Button
            android:id="@+id/repairs_private_apply_history"
            android:layout_width="@dimen/btn_width"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:paddingRight="20dp"
            android:textColor="@color/gray_text_btn"
            android:textSize="@dimen/title_back" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_div" />
    </RelativeLayout>
