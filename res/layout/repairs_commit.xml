<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/repairs_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <Button
            android:id="@+id/repairs_back"
             style="@style/Back_Button" />

        <TextView
            android:id="@+id/repairs_private_apply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="报事报修 "
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_22" />

        <Button
            android:id="@+id/repairs_private_apply_history"
            android:layout_width="@dimen/btn_width"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:paddingRight="20dp"
            android:textColor="@color/gray_text_btn"
            android:textSize="@dimen/title_back" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_div" />

    <RelativeLayout
        android:id="@+id/repairs_apply_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/repairs_private_apply_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="区域类别："
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_16"
            android:visibility="visible" />

        <TextView
            android:id="@+id/repairs_apply_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/repairs_private_apply_item_arrow"
            android:layout_toRightOf="@+id/repairs_private_apply_item_title"
            android:background="@null"
            android:hint="请选择报修类别"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/textsize_14" />

        <ImageView
            android:id="@+id/repairs_private_apply_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:contentDescription=""
            android:src="@drawable/home_icon_cbb" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_div" />

    <RelativeLayout
        android:id="@+id/repairs_subject"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/repairs_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="&#12288;&#12288;主题："
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_16"
            android:visibility="visible" />

        <EditText
            android:id="@+id/repairs_subject_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/repairs_subject_title"
            android:background="@null"
            android:hint="请填写报修项目的主题"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/textsize_14" />
    </RelativeLayout>
       <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_div" />
    
    <RelativeLayout
        android:id="@+id/repairs_private_apply_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/repairs_private_apply_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="&#12288;&#12288;位置："
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_16"
            android:visibility="visible" />

        <EditText
            android:id="@+id/repairs_apply_address_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/repairs_private_apply_address_title"
            android:background="@null"
            android:hint="请输入房号或具体位置"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/textsize_14" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_div" />

    <RelativeLayout
        android:id="@+id/repairs_private_apply_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/repairs_private_apply_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="&#12288;&#12288;描述："
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_16"
            android:visibility="visible" />

        <EditText
            android:id="@+id/repairs_apply_desc_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/repairs_private_apply_desc_title"
            android:background="@null"
            android:hint="请用简短语言概括一下目前情况"
            android:maxLines="4"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/textsize_14" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_div" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="15dp"
            android:text="添加图片"
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="5dp" >

        <GridView
            android:id="@+id/gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:horizontalSpacing="3dp"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="5dp" >
        </GridView>
    </RelativeLayout>

    <Button
        android:id="@+id/repairs_commit"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@drawable/button_common"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_20" />

</LinearLayout>