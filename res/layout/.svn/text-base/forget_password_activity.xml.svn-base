<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/forget_password_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="@color/colorWhite"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <Button
            android:id="@+id/forget_password_back"
            style="@style/Back_Button" />

        <TextView
            android:id="@+id/forget_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="设置密码"
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_22" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_div" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/forget_password_phone_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite" >

        <TextView
            android:id="@+id/forget_password_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="手机号码"
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_16"
            android:visibility="visible" />

        <View
            android:id="@+id/forget_password_phone_line"
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/forget_password_phone_title"
            android:background="@color/line_div" />

        <EditText
            android:id="@+id/forget_password_phone_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/forget_password_phone_line"
            android:background="@null"
            android:hint="请输入手机号码"
            android:maxLength="12"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/text_hint_normal"
            android:textSize="@dimen/textsize_16" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_div" />

    <RelativeLayout
        android:id="@+id/forget_password_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite" >

        <TextView
            android:id="@+id/forget_password_new_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="新的密码"
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_16"
            android:visibility="visible" />

        <View
            android:id="@+id/forget_password_new_line1"
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/forget_password_new_title1"
            android:background="@color/line_div" />

        <EditText
            android:id="@+id/forget_password_new_info1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/forget_password_new_line1"
            android:background="@null"
            android:hint="请输入6-12位新的密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/text_hint_normal"
            android:textSize="@dimen/textsize_16" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_div" />

    <RelativeLayout
        android:id="@+id/forget_password_new_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite" >

        <TextView
            android:id="@+id/forget_password_new_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="确认密码"
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_16"
            android:visibility="visible" />

        <View
            android:id="@+id/forget_password_new_line2"
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/forget_password_new_title2"
            android:background="@color/line_div" />

        <EditText
            android:id="@+id/forget_password_new_info2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/forget_password_new_line2"
            android:background="@null"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/text_hint_normal"
            android:textSize="@dimen/textsize_16" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_div" />

    <RelativeLayout
        android:id="@+id/forget_password_code_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite" >

        <TextView
            android:id="@+id/forget_password_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="验证号码"
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_16"
            android:visibility="visible" />

        <View
            android:id="@+id/forget_password_code_line"
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/forget_password_code_title"
            android:background="@color/line_div" />

        <EditText
            android:id="@+id/forget_password_code_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/forget_password_code_getcode"
            android:layout_toRightOf="@+id/forget_password_code_line"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="@color/text_hint_normal"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/forget_password_code_getcode"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="获取"
            android:textColor="@color/textcolor_switch"
            android:visibility="visible" />

        <TextView
            android:id="@+id/forget_password_code_hint"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/time_bg"
            android:gravity="center"
            android:text="60s"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_div" />

    <Button
        android:id="@+id/forget_password_commit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_common"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textsize_20" />

</LinearLayout>