<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/phone_notification_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <Button
            android:id="@+id/phone_notification_details_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="@null"
            android:drawableLeft="@drawable/back_arrow"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/sub_head"
            android:textSize="@dimen/textsize_18" />

        <TextView
            android:id="@+id/sys_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="姓名"
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_22" />

        <Button
            android:id="@+id/info_signa_finish"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="@null"
            android:enabled="false"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="完成"
            android:textColor="@drawable/nextbtn"
            android:textSize="@dimen/title_back" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <EditText
            android:id="@+id/set_signa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="top"
            android:maxLength="6"
            android:padding="5dp"
            android:textColor="@color/sub_head" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBg" />

</LinearLayout>